                    "textCid": "JORFTEXT000043947049",
                    "textTitle": "D\u00e9cret n\u00b02021-1091 du 18 ao\u00fbt 2021 - art. 1",
                    "linkType": "MODIFIE",
                    "linkOrientation": "cible",
                    "articleNum": "1",
                    "articleId": "LEGIARTI000043947469",
                    "natureText": "DECRET",

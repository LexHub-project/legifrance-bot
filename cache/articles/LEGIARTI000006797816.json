                {
                    "textCid": "JORFTEXT000041712000",
                    "textTitle": "Ordonnance n\u00b0 2020-232 du 11 mars 2020 - art. 43",
                    "linkType": "MODIFIE",
                    "linkOrientation": "cible",
                    "articleNum": "43",
                    "articleId": "LEGIARTI000041713891",
                    "natureText": "ORDONNANCE",
